import {
  Controller,
  Get,
  Post,
  Body,
  Param,
  ParseIntPipe,
  Patch,
  Delete,
  ValidationPipe, // üí° Importar ValidationPipe
  UseGuards, // üí° Importar UseGuards
} from '@nestjs/common';
import { ModuloService } from './modulo.service';
// üí° Importar DTOs
import { CreateModuloDto } from './dto/create_modulo.dto';
import { UpdateModuloDto } from './dto/update_modulo.dto';
import { AuthGuard } from '@nestjs/passport'; // üí° Importar AuthGuard

// ‚ùå Eliminamos los tipos manuales
// type CreateModuloData = Omit<ModuloModel, 'id_modulo'>;
// type UpdateModuloData = Partial<Omit<ModuloModel, 'id_modulo'>>;

@UseGuards(AuthGuard('jwt'))
@Controller('modulo')
export class ModuloController {
  // Aseg√∫rate de que 'export' est√© aqu√≠.
  constructor(private readonly moduloService: ModuloService) { }

  // 1. OBTENER TODOS LOS M√ìDULOS ACTIVOS (GET /modulo)
  @Get()
  async findAll() {
    return this.moduloService.findAll();
  }

  // 2. OBTENER UN M√ìDULO POR ID (GET /modulo/1)
  @Get(':id')
  async findOne(@Param('id', ParseIntPipe) id: number) {
    return this.moduloService.findOne(id);
  }

  // 3. CREAR UN NUEVO M√ìDULO (POST /modulo) (üí° Usamos DTO y ValidationPipe)
  @Post()
  async create(
    @Body(new ValidationPipe({ whitelist: true, forbidNonWhitelisted: true }))
    createModuloDto: CreateModuloDto, // üí° Usar DTO
  ) {
    return this.moduloService.create(createModuloDto);
  }

  // 4. ACTUALIZAR UN M√ìDULO (PATCH /modulo/1) (üí° Usamos DTO y ValidationPipe)
  @Patch(':id')
  async update(
    @Param('id', ParseIntPipe) id: number,
    @Body(new ValidationPipe({ whitelist: true, forbidNonWhitelisted: true }))
    updateModuloDto: UpdateModuloDto, // üí° Usar DTO
  ) {
    return this.moduloService.update(id, updateModuloDto);
  }

  // 5. ELIMINACI√ìN L√ìGICA (DELETE /modulo/1)
  @Delete(':id')
  async remove(@Param('id', ParseIntPipe) id: number) {
    return this.moduloService.remove(id);
  }
}
