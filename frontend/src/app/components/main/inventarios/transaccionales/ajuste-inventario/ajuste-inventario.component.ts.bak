import { Component, OnInit, ChangeDetectorRef, ViewChild, ElementRef } from '@angular/core';
import { Router } from '@angular/router';
import { CommonModule } from '@angular/common';
import { FormsModule } from '@angular/forms';
import { AjusteInventarioService, CreateAjusteInventarioDto, DetalleAjusteInventario } from '../../../../../services/ajuste-inventario.service';
import { SucursalService } from '../../../../../services/sucursal.service';
import { DepositoService } from '../../../../../services/deposito.service';
import { MonedaService } from '../../../../../services/moneda.service';
import { MotivoAjusteInventarioService } from '../../../../../services/motivo-ajuste-inventario.service';
import { ArticuloService } from '../../../../../services/articulo.service';
import { AuthService } from '../../../../../services/auth.service';
import { CotizacionService } from '../../../../../services/cotizacion.service';
import { NextOnEnterDirective } from '../../../../../directives/next-on-enter.directive';
import Swal from 'sweetalert2';

@Component({
    selector: 'app-ajuste-inventario',
    standalone: true,
    imports: [CommonModule, FormsModule, NextOnEnterDirective],
    templateUrl: './ajuste-inventario.component.html',
    styleUrls: ['./ajuste-inventario.component.css']
})
export class AjusteInventarioComponent implements OnInit {
    @ViewChild('sucursalInput') sucursalInput!: ElementRef;

    loading = false;
    isBlocked = false;
    enEdicion = false;

    // Catálogos
    sucursales: any[] = [];
    depositos: any[] = [];
    monedas: any[] = [];
    motivos: any[] = [];
    articulos: any[] = [];
    tiposAjuste: any[] = [];

    // Formulario Cabecera
    nuevoAjuste: CreateAjusteInventarioDto = {
        id_sucursal: 0,
        id_deposito: 0,
        id_usuario: 0,
        id_moneda: 0,
        id_motivo_ajuste: 0,
        numero_comprobante: 0,
        fecha_documento: new Date().toISOString().split('T')[0],
        tasa_cambio: 1,
        observacion: '',
        tipo_ajuste: 'POSITIVO',
        detalle: []
    };

    // Detalle temporal
    detalleActual: DetalleAjusteInventario = {
        id_articulo: 0,
        numero_item: 0,
        cantidad: 1,
        costo_ml: 0
    };

    articuloSeleccionado: any = null;

    constructor(
        private ajusteService: AjusteInventarioService,
        private sucursalService: SucursalService,
        private depositoService: DepositoService,
        private monedaService: MonedaService,
        private motivoService: MotivoAjusteInventarioService,
        private articuloService: ArticuloService,
        private cotizacionService: CotizacionService,
        private authService: AuthService,
        private cdr: ChangeDetectorRef,
        private router: Router
    ) { }

    ngOnInit() {
        this.cargarCatalogos();
        // No inicializamos formulario automáticamente, esperamos a botón Nuevo
    }

    cargarCatalogos() {
        this.sucursalService.getAll().subscribe(data => {
            this.sucursales = data;
        });

        this.monedaService.getAll().subscribe(data => {
            this.monedas = data;
        });
        this.motivoService.getAll().subscribe(data => {
            this.motivos = data;
            console.log('Motivos cargados:', this.motivos);
        });
        this.articuloService.getAll().subscribe(data => this.articulos = data);
        // Inicializar tipos de ajuste (pos/neg)
        this.tiposAjuste = [
            { id_tipo_transaccion: 'POSITIVO', nombre: 'Positivo' },
            { id_tipo_transaccion: 'NEGATIVO', nombre: 'Negativo' }
        ];
    }

    async onSucursalChange(id_sucursal?: number): Promise<void> {
        this.depositos = [];
        // Si no viene parámetro, usar el del modelo
        const id = id_sucursal || this.nuevoAjuste.id_sucursal;

        if (!id) {
            this.nuevoAjuste.id_deposito = 0;
            return;
        }

        return new Promise((resolve) => {
            this.depositoService.getBySucursal(Number(id)).subscribe({
                next: (data) => {
                    this.depositos = data;
                    // Si estamos editando y no hay deposito seleccionado, seleccionar el primero
                    if (this.enEdicion && this.depositos.length > 0 && !this.nuevoAjuste.id_deposito) {
                        this.nuevoAjuste.id_deposito = this.depositos[0].id_deposito;
                    }
                    this.cdr.detectChanges(); // Fix display glitch
                    resolve();
                },
                error: () => resolve()
            });
        });
    }

    onMonedaFechaChange() {
        this.verificarCotizacion();
    }

    verificarCotizacion() {
        // Regla: Si moneda es 1 (Guaranies), tasa es 1.
        if (Number(this.nuevoAjuste.id_moneda) === 1) {
            this.nuevoAjuste.tasa_cambio = 1;
            return;
        }

        if (!this.nuevoAjuste.id_moneda || !this.nuevoAjuste.fecha_documento) return;

        // Buscar cotización
        this.loading = true; // small UX feedback
        this.cotizacionService.getById(Number(this.nuevoAjuste.id_moneda), this.nuevoAjuste.fecha_documento)
            .subscribe({
                next: (cot) => {
                    this.loading = false;
                    // Usamos tasa venta por defecto para operaciones, o lo que el negocio dicte.
                    this.nuevoAjuste.tasa_cambio = cot.tasa_venta;
                },
                error: (err) => {
                    this.loading = false;
                    this.nuevoAjuste.tasa_cambio = 0; // Invalidar
                    Swal.fire({
                        title: 'Cotización no encontrada',
                        text: `No existe cotización registrada para la fecha ${this.nuevoAjuste.fecha_documento}. No podrá registrar la operación.`,
                        icon: 'error'
                    });
                }
            });
    }

    nuevo() {
        this.enEdicion = true;
        this.inicializarFormulario(true);
        this.cdr.detectChanges();

        // Usar timeout para asegurar que el DOM se actualice
        setTimeout(() => {
            const el = document.getElementById('txtSucursal');
            if (el) {
                el.focus();
            }
        }, 100);
    }

    cancelar() {
        this.enEdicion = false;
        this.nuevoAjuste = {
            id_sucursal: 0,
            id_deposito: 0,
            id_usuario: 0,
            id_moneda: 0,
            id_motivo_ajuste: 0,
            numero_comprobante: 0,
            fecha_documento: new Date().toISOString().split('T')[0],
            tasa_cambio: 1,
            observacion: '',
            tipo_ajuste: 'POSITIVO',
            detalle: []
        };
        this.resetDetalleActual();
        this.depositos = []; // Limpiar depositos al cancelar
        this.cdr.detectChanges();
    }

    async inicializarFormulario(cargarNumero = false) {
        const user = this.authService.getCurrentUser();
        const userId = user ? user.id : 0;

        // 1. Resetear formulario
        this.nuevoAjuste = {
            id_sucursal: this.sucursales.length > 0 ? this.sucursales[0].id_sucursal : 0,
            id_deposito: 0,
            id_usuario: userId,
            id_moneda: 1, // Default Guaranies
            id_motivo_ajuste: 0,
            numero_comprobante: 0,
            fecha_documento: new Date().toISOString().split('T')[0],
            tasa_cambio: 1,
            observacion: '',
            tipo_ajuste: 'POSITIVO',
            detalle: []
        };

        // Moneda Default
        const guaranies = this.monedas.find(m => m.id_moneda === 1);
        if (guaranies) this.nuevoAjuste.id_moneda = guaranies.id_moneda;

        // Cargar depósitos (Await para asegurar carga antes de pintar)
        if (this.nuevoAjuste.id_sucursal) {
            await this.onSucursalChange(this.nuevoAjuste.id_sucursal);
        }

        this.resetDetalleActual();

        // Verificar Cotización Inicial (si por alguna razón default no es 1)
        this.verificarCotizacion();

        // 2. Operaciones Asíncronas
        if (userId) {
            // Verificar Configuración
            this.ajusteService.checkConfig(userId).subscribe({
                next: (config) => {
                    if (!config.hasConfig || !config.hasTerminal) {
                        this.isBlocked = true;
                        if (this.enEdicion) {
                            Swal.fire('Acceso Restringido', 'Falta configuración de usuario/terminal.', 'error');
                        }
                    } else {
                        this.isBlocked = false;
                    }
                }
            });

            // Cargar Número
            if (cargarNumero) {
                this.ajusteService.getNextNumber(userId).subscribe({
                    next: (res) => {
                        this.nuevoAjuste.numero_comprobante = res.numero;
                        this.cdr.markForCheck();
                    }
                });
            }
        }
    }

    limpiarFormulario() {
        Swal.fire({
            title: '¿Cancelar operación?',
            text: 'Se perderán los datos no guardados',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Sí, cancelar',
            cancelButtonText: 'No'
        }).then((result) => {
            if (result.isConfirmed) {
                this.cancelar();
            }
        });
    }

    resetDetalleActual() {
        this.detalleActual = {
            id_articulo: 0,
            numero_item: 0,
            cantidad: 1,
            costo_ml: 0
        };
        this.articuloSeleccionado = null;
    }

    onArticuloChange() {
        if (this.detalleActual.id_articulo) {
            this.articuloSeleccionado = this.articulos.find(a => a.id_articulo == this.detalleActual.id_articulo);
        } else {
            this.articuloSeleccionado = null;
        }
    }

    agregarItem() {
        if (!this.detalleActual.id_articulo || this.detalleActual.cantidad <= 0) {
            Swal.fire({
                icon: 'warning',
                title: 'Datos incompletos',
                text: 'Seleccione un artículo y cantidad válida',
                toast: true,
                position: 'top-end',
                showConfirmButton: false,
                timer: 3000
            });
            return;
        }

        const item: DetalleAjusteInventario = {
            ...this.detalleActual,
            numero_item: this.nuevoAjuste.detalle.length + 1,
            articulo: this.articuloSeleccionado
        };

        this.nuevoAjuste.detalle.push(item);
        this.resetDetalleActual();
    }

    eliminarItem(index: number) {
        this.nuevoAjuste.detalle.splice(index, 1);
        this.nuevoAjuste.detalle.forEach((item, i) => item.numero_item = i + 1);
    }

    guardar() {
        if (this.isBlocked) {
            Swal.fire('Error', 'No tiene permisos de configuración.', 'error');
            return;
        }

        // Validaciones
        if (!this.nuevoAjuste.id_sucursal || this.nuevoAjuste.id_sucursal === 0) {
            Swal.fire('Error', 'Debe seleccionar una Sucursal.', 'warning');
            return;
        }
        if (!this.nuevoAjuste.id_deposito || this.nuevoAjuste.id_deposito === 0) {
            Swal.fire('Error', 'Debe seleccionar un Depósito.', 'warning');
            return;
        }
        if (!this.nuevoAjuste.id_motivo_ajuste || this.nuevoAjuste.id_motivo_ajuste === 0) {
            Swal.fire('Error', 'Debe seleccionar un Motivo de Ajuste.', 'warning');
            return;
        }

        // Validación de moneda
        if (Number(this.nuevoAjuste.id_moneda) !== 1 && (!this.nuevoAjuste.tasa_cambio || this.nuevoAjuste.tasa_cambio <= 0)) {
            Swal.fire('Error', 'No existe cotización válida para la moneda seleccionada. No se puede guardar.', 'error');
            return;
        }

        if (this.nuevoAjuste.detalle.length === 0) {
            Swal.fire('Error', 'Agregue al menos un artículo al detalle.', 'warning');
            return;
        }

        // Confirmación
        Swal.fire({
            title: '¿Confirmar Ajuste?',
            text: "Esta acción registrará el movimiento de stock.",
            icon: 'question',
            showCancelButton: true,
            confirmButtonText: 'Sí, confirmar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                this.procesarGuardado();
            }
        });
    }

    procesarGuardado() {
        // Asegurar tipos numéricos para el backend
        const payload: CreateAjusteInventarioDto = {
            ...this.nuevoAjuste,
            id_sucursal: Number(this.nuevoAjuste.id_sucursal),
            id_deposito: Number(this.nuevoAjuste.id_deposito),
            id_usuario: Number(this.nuevoAjuste.id_usuario),
            id_moneda: Number(this.nuevoAjuste.id_moneda),
            id_motivo_ajuste: Number(this.nuevoAjuste.id_motivo_ajuste),
            numero_comprobante: Number(this.nuevoAjuste.numero_comprobante),
            tasa_cambio: Number(this.nuevoAjuste.tasa_cambio),
            detalle: this.nuevoAjuste.detalle.map(item => {
                const { articulo, ...rest } = item;

                const rawCosto = Number(item.costo_ml); // Valor ingresado por usuario
                let final_costo_ml = rawCosto;
                let final_costo_me = 0;

                if (Number(this.nuevoAjuste.id_moneda) === 1) {
                    // Si es guaranies (1), ambos campos guardan el mismo monto
                    final_costo_me = rawCosto;
                } else {
                    // Si es otra moneda (ej Dolares), el input es el monto extranjero
                    final_costo_me = rawCosto;
                    // El local se calcula con la tasa
                    final_costo_ml = rawCosto * Number(this.nuevoAjuste.tasa_cambio);
                }

                return {
                    ...rest,
                    id_articulo: Number(item.id_articulo),
                    cantidad: Number(item.cantidad),
                    costo_ml: final_costo_ml,
                    costo_me: final_costo_me
                };
            })
        };

        this.loading = true;
        this.ajusteService.create(payload).subscribe({
            next: () => {
                this.loading = false;
                Swal.fire({
                    title: 'Ajuste Guardado',
                    text: 'El inventario ha sido actualizado correctamente',
                    icon: 'success',
                    timer: 2000,
                    showConfirmButton: false
                });
                this.enEdicion = false;
                this.cancelar();
            },
            error: (err) => {
                this.loading = false;
                console.error(err);
                let errorMessage = 'No se pudo registrar el ajuste.';
                if (err.error && err.error.message) {
                    errorMessage = err.error.message;
                }
                Swal.fire('Error', errorMessage, 'error');
            }
        });
    }

    calcularTotalNuevoAjuste(): number {
        return this.nuevoAjuste.detalle.reduce((acc, item) => acc + (item.cantidad * (item.costo_ml || 0)), 0);
    }

    get decimals(): number {
        const moneda = this.monedas.find(m => m.id_moneda == this.nuevoAjuste.id_moneda);
        return moneda && moneda.cantidad_decimal != null ? moneda.cantidad_decimal : 0;
    }
}
