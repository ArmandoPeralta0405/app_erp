{
    "name": "app-erp-root",
    "version": "1.0.0",
    "scripts": {
        "start": "concurrently --names \"BACKEND,FRONTEND\" --prefix-colors \"blue,magenta\" \"npm run start:backend\" \"npm run start:frontend\"",
        "start:backend": "cd backend && npm run start:dev",
        "start:frontend": "cd frontend && npm start",
        "install:all": "npm install && cd backend && npm install && cd frontend && npm install"
    },
    "devDependencies": {
        "concurrently": "^9.1.0"
    }
}